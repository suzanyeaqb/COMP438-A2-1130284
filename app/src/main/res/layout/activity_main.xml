<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lenovo.assginment2.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:weightSum="1"
        android:background="#e6c9c9">

        <TextView
            android:id="@+id/txtNumber"
            android:layout_width="match_parent"
            android:layout_height="204dp"
            android:background="#ffffff"
            android:gravity="bottom|right"
            android:phoneNumber="false"
            android:text="0"
            android:textAlignment="gravity"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="50dp"
            android:singleLine="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.05"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cbtn"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#ed8e8e"
                android:singleLine="false"
                android:text="c"
                android:onClick="clear"
                android:textAlignment="center"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btnmc"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#ed8e8e"
                android:singleLine="false"
                android:text="MC"
                android:onClick="clearToMemo"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btnmr"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#ed8e8e"
                android:singleLine="false"
                android:onClick="recordToMemo"

                android:text="MR"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btnm"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#ed8e8e"
                android:onClick="saveToMemo"

                android:singleLine="false"
                android:text="M+"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_weight="0.04"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnback"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1.01"
                android:onClick="back"

                android:backgroundTint="#ed8e8e"
                android:text="Back"

                android:textSize="20dp" />

            <Button
                android:id="@+id/btnn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="#ed8e8e"
                android:text="N"
                android:onClick="negative"

                android:textSize="20dp" />

            <Button
                android:id="@+id/btnDiv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="#ed8e8e"
                android:text="/"
                android:onClick="div"

                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.05"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn7"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.24"
                android:onClick="numberSeven"
                android:singleLine="false"
                android:text="7"
                android:textAlignment="center"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btn8"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.24"
                android:onClick="numberEight"
                android:singleLine="false"
                android:text="8"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btn9"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.24"
                android:onClick="numberNine"
                android:singleLine="false"
                android:text="9"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btnx"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.24"
                android:backgroundTint="#ed8e8e"
                android:singleLine="false"
                android:onClick="multiply"
                android:text="x"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.05"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn4"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.24"
                android:onClick="numberFour"
                android:singleLine="false"
                android:text="4"
                android:textAlignment="center"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btn5"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.24"
                android:onClick="numberFive"
                android:singleLine="false"
                android:text="5"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btn6"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.24"
                android:onClick="numberSix"
                android:singleLine="false"
                android:text="6"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btnMins"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.24"
                android:onClick="sub"
                android:backgroundTint="#ed8e8e"
                android:singleLine="false"
                android:text="-"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.05"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn1"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.24"
                android:onClick="numberOne"
                android:singleLine="false"
                android:text="1"
                android:textAlignment="center"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btn2"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.24"
                android:onClick="numberTwo"
                android:singleLine="false"
                android:text="2"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btn3"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.24"
                android:onClick="numberThree"
                android:singleLine="false"
                android:text="3"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btnPlus"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.24"
                android:onClick="sum"
                android:backgroundTint="#ed8e8e"
                android:singleLine="false"
                android:text="+"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/btn0"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="14.46"
                android:onClick="numberZero"
                android:text="0"
                android:textSize="40dp" />

            <Button
                android:id="@+id/btnEqual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="result"

                android:backgroundTint="#ed8e8e"
                android:text="="
                android:textSize="40dp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
